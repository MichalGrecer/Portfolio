---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="pl">
	<head>
		<BaseHead title={`404 | ${SITE_TITLE}`} description="Strona nie znaleziona" />
	</head>
	<body class="bg-white dark:bg-[#050505] text-zinc-900 dark:text-zinc-400 font-sans min-h-screen flex flex-col">
		<Header />
		<main class="flex-grow flex flex-col items-center justify-center text-center px-6">
			<h1 class="text-9xl font-bold text-zinc-200 dark:text-zinc-800 mb-4">404</h1>
			<h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">Zgubiłeś się w kodzie?</h2>
			<p class="text-zinc-500 mb-8">Ta strona nie istnieje. Wróć do bazy.</p>
			<a href="/" class="px-6 py-3 bg-blue-600 text-white rounded-xl hover:bg-blue-700 transition-colors">
				Wróć na stronę główną
			</a>
		</main>
		<Footer />
	</body>
</html>
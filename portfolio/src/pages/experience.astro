---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';

const experiences = [
  {
    role: "Independent Software & Hardware Developer",
    company: "Freelance",
    period: "2024 — Obecnie",
    description: "Projektowanie i budowa systemów łączących elektronikę z nowoczesnym oprogramowaniem.",
    achievements: [
      "Stworzenie systemu 'IoT Activity Tracker' opartego na ESP32 i React Native (Bluetooth LE).",
      "Integracja systemów z rządowymi bazami danych (GUS/REGON) w celu automatycznej weryfikacji danych firm.",
      "Budowa i oprogramowanie modułowych systemów Smart Mirror (C++, Node.js)."
    ],
    tech: ["Python", "C++", "React Native", "Node.js", "IoT", "TypeScript"]
  },
  {
    role: "Helpdesk / Handlowiec",
    company: "Inter Projekt | Gliwice",
    period: "Lipiec 2025 — Październik 2025",
    description: "Rola hybrydowa łącząca wsparcie techniczne, sprzedaż oraz optymalizację procesów biznesowych.",
    achievements: [
      "Tworzenie autorskich skryptów automatyzujących powtarzalne zadania zespołu handlowego.",
      "Nadzór techniczny nad platformą e-commerce (Magento).",
      "Zdobycie wiedzy z zakresu wdrażania i konfiguracji systemów ERP (Comarch).",
      "Serwisowanie i naprawa stacji roboczych oraz rozwiązywanie bieżących problemów technicznych."
    ],
    tech: ["Python (Automation)", "Magento", "ERP Comarch", "Hardware Support"]
  },
  {
    role: "Programista Python (Praktyki zawodowe)",
    company: "Słoneccy.pl | Strzelce Opolskie",
    period: "Lipiec 2025",
    description: "Skupienie na optymalizacji wewnętrznych procesów firmy poprzez automatyzację.",
    achievements: [
      "Tworzenie aplikacji w języku Python mających na celu cyfryzację i usprawnienie biurokracji.",
      "Praca nad algorytmami przetwarzającymi dane wewnętrzne firmy."
    ],
    tech: ["Python", "Automation", "Data Processing"]
  },
  {
    role: "Projekty Studenckie & R&D",
    company: "Politechnika Śląska / Własne",
    period: "2022 — 2025",
    description: "Intensywny rozwój kompetencji technicznych poprzez realizację złożonych projektów akademickich i własnych.",
    achievements: [
      "Tworzenie aplikacji webowych w architekturze klient-serwer (PHP/SQL).",
      "Implementacja algorytmów i struktur danych w języku C++.",
      "Projektowanie responsywnych interfejsów przy użyciu HTML, CSS i JavaScript."
    ],
    tech: ["PHP", "SQL", "C++", "HTML/CSS", "JavaScript", "React Native", "Node.js", "IoT"]
  },
  {
    role: "Helpdesk / Serwisant (Praktyki zawodowe)",
    company: "Terabajt | Strzelce Opolskie",
    period: "Maj 2019 — Maj 2020",
    description: "Pierwsze doświadczenia w profesjonalnym serwisie sprzętu komputerowego i wsparciu użytkownika.",
    achievements: [
      "Diagnozowanie i naprawa usterek sprzętowych w laptopach i komputerach stacjonarnych.",
      "Konfiguracja systemów operacyjnych oraz oprogramowania biurowego u klientów.",
      "Utrzymywanie relacji z klientem w ramach pierwszej linii wsparcia."
    ],
    tech: ["Hardware Support", "Windows Configuration", "Customer Service"]
  }
];
---

<!doctype html>
<html lang="pl">
<head>
	<BaseHead title={`Doświadczenie | ${SITE_TITLE}`} description="Historia zawodowa i kluczowe osiągnięcia techniczne Michała." />
</head>
<body class="bg-white dark:bg-[#050505] text-zinc-900 dark:text-zinc-400 selection:bg-blue-500/30 antialiased font-sans transition-colors duration-500 min-h-screen relative">	
	
	<div class="fixed inset-0 pointer-events-none overflow-hidden -z-10 bg-white dark:bg-[#050505]">
		<div class="absolute inset-0 dark:hidden">
			<div class="absolute inset-y-0 left-0 w-[30%] bg-gradient-to-r from-blue-100/30 to-transparent"></div>
			<div class="absolute inset-y-0 right-0 w-[30%] bg-gradient-to-l from-blue-100/30 to-transparent"></div>
		</div>
		<div class="absolute inset-0 hidden dark:block">
			<div class="absolute inset-y-0 left-0 w-[30%] bg-gradient-to-r from-blue-900/10 to-transparent"></div>
			<div class="absolute inset-y-0 right-0 w-[30%] bg-gradient-to-l from-blue-900/10 to-transparent"></div>
		</div>
	</div>

	<div class="relative z-10">
		<Header />

		<main class="max-w-5xl mx-auto px-6 py-16 md:py-24">
			
			<header class="mb-20 opacity-0 translate-y-4 transition-all duration-700 ease-out section-animate">
				<h1 class="text-5xl md:text-6xl font-bold text-zinc-900 dark:text-zinc-100 tracking-tighter mb-6">
					Doświadczenie
				</h1>
				<p class="text-xl text-zinc-500 dark:text-zinc-400 max-w-2xl leading-relaxed">
					Moja ścieżka to łączenie inżynierii oprogramowania z elektroniką. Buduję aplikacje <strong>webowe, desktopowe oraz mobilne</strong>, realizując projekty, które wymagają zrozumienia zarówno kodu wysokiego poziomu (Python/JS), jak i działania sprzętu (C++).				</p>
			</header>

			<div class="relative space-y-20">
				<div class="absolute left-0 top-2 bottom-0 w-px bg-zinc-200 dark:bg-zinc-900 hidden md:block"></div>

				{experiences.map((exp) => (
					<section class="relative md:pl-12 opacity-0 translate-y-4 transition-all duration-700 ease-out section-animate">
						<div class="absolute left-[-4px] top-2 w-2 h-2 rounded-full bg-blue-500 hidden md:block shadow-[0_0_10px_rgba(59,130,246,0.5)]"></div>
						
						<div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
							<div class="lg:col-span-4">
								<h2 class="text-2xl font-bold text-zinc-900 dark:text-zinc-100 mb-1">{exp.role}</h2>
								<p class="text-blue-500 font-mono text-sm mb-4">{exp.company}</p>
                                <p class="text-xs text-zinc-400 dark:text-zinc-600 font-mono mb-4 uppercase tracking-widest">{exp.period}</p>
								
								<div class="flex flex-wrap gap-2 mt-4">
									{exp.tech.map((t) => (
										<span class="px-2 py-1 text-[10px] border border-zinc-200 dark:border-zinc-800 text-zinc-500 rounded-md bg-zinc-50/50 dark:bg-zinc-900/50">
											{t}
										</span>
									))}
								</div>
							</div>

							<div class="lg:col-span-8">
								<p class="text-zinc-600 dark:text-zinc-300 mb-6 text-lg leading-relaxed">
									{exp.description}
								</p>
								<ul class="space-y-4">
									{exp.achievements.map((item) => (
										<li class="flex items-start text-zinc-500 dark:text-zinc-400">
											<span class="text-blue-500 mr-3 mt-1.5">•</span>
											<span>{item}</span>
										</li>
									))}
								</ul>
							</div>
						</div>
					</section>
				))}
			</div>
		</main>

		<Footer />
	</div>

	<script is:inline>
		const observer = new IntersectionObserver(
			entries => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('is-visible');
						observer.unobserve(entry.target);
					}
				});
			},
			{ threshold: 0.1 }
		);

		document.querySelectorAll('.section-animate').forEach(el => {
			observer.observe(el);
		});
	</script>

	<style is:global>
		.is-visible {
			opacity: 1 !important;
			transform: translateY(0) !important;
		}
	</style>
</body>
</html>